<a href="/dashboard/procedures/<%= requestId %>" class="btn btn-primary mb-3"><i class="fas fa-angle-right mr-2"></i>قائمة الإجراءات</a>

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-plus mr-2"></i>انشاء اجراء</h3>
    </div>
    <form action="/dashboard/procedures/<%= requestId %>/create" method="post">
        <div class="card-body">
            <% messages.forEach(message => { %>
            <div class="alert alert-<%= message.variant || 'primary' %>" id="app-alert"><%- message.body %></div>
            <% }) %>

            <div class="row">
                <div class="col-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="form-group">
                        <label>العنوان :</label>
                        <input type="text" class="form-control" name="title" value="<%= vv("title") %>" />
                    </div>
                </div>
                <div class="col-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="form-group">
                        <label>المرفقات :</label>
                        <div class="custom-file upload-modal" data-type="multiple" data-max="5">
                            <input type="text" class="form-control" name="attachments" value="<%= vv('attachments') %>" readonly />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="form-group">
                        <label>ملاحظات :</label>
                        <textarea class="form-control" name="note" rows="5"><%= vv("note") %></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">انشاء الإجراء</button>
        </div>
    </form>
</div>
