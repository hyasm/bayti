<a href="/dashboard/users/create" class="btn bg-indigo mb-3"><i class="fas fa-plus mr-2"></i>انشاء مستخدم</a>

<% messages.forEach(message => { %>
<div class="alert alert-<%= message.variant || 'primary' %>" id="app-alert"><%- message.body %></div>
<% }) %>

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-bars mr-2"></i>قائمة المستخدمين</h3>
    </div>
    <div class="card-header rounded-0">
        <div class="d-flex align-items-center">
            <div class="flex-grow-1">
                <input type="search" id="datatable-search-text" class="form-control" placeholder="بحث ..." />
            </div>
            <div class="px-2">
                <select class="custom-select" id="datatable-search-columns">
                    <option value="all" selected>الكل</option>
                </select>
            </div>
            <div>
                <button type="submit" class="btn btn-default" id="datatable-search" style="min-width: 80px"><i class="fa fa-search mr-2"></i>بحث</button>
            </div>
        </div>
    </div>
    <div class="overlay" id="datatable-overlay">
        <i class="fas fa-3x fa-sync-alt fa-spin"></i>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover text-nowrap" id="datatable">
                <thead>
                    <tr>
                        <th>المستخدم</th>
                        <th>الإسم</th>
                        <th>البريد الإلكتروني</th>
                        <th>رقم الجوال</th>
                        <th>الصلاحية</th>
                        <th>الحالة</th>
                        <th>أنشئ في</th>
                        <th>آخر تعديل</th>
                        <th>أدوات</th>
                    </tr>
                </thead>
                <tbody>
                    <% users && users.forEach(user => { %>
                    <tr>
                        <td><%= user._id %></td>
                        <td><%= user.full_name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.mobile %></td>
                        <td><%= user.role.name %></td>
                        <td><%= user.status %></td>
                        <td><%= toDate(user.created_at) || "-" %></td>
                        <td><%= toDate(user.updated_at) || "-" %></td>
                        <td>
                            <a class="btn bg-indigo btn-sm" href="/dashboard/users/<%= user._id %>"> <i class="fas fa-file-alt mr-2"></i>تفاصيل</a>
                            <a class="btn btn-success btn-sm" href="/dashboard/users/<%= user._id %>/update"> <i class="fas fa-pencil-alt mr-2"></i>تعديل</a>
                            <a class="btn btn-success btn-sm" href="/dashboard/users/<%= user._id %>/delete"> <i class="fas fa-trash-alt mr-2"></i>حذف</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex align-items-center">
            <div class="flex-grow-1">
                <div id="datatable-info"></div>
            </div>
            <div class="px-2">
                <select class="custom-select" id="datatable-pages">
                    <option disabled>الصفحة</option>
                </select>
            </div>
            <div>
                <select class="custom-select" id="datatable-result" style="min-width: 80px">
                    <option disabled>عرض</option>
                    <option value="15">15</option>
                    <option value="30">30</option>
                    <option value="45">45</option>
                    <option value="60">60</option>
                    <option value="100">100</option>
                </select>
            </div>
        </div>
    </div>
</div>
