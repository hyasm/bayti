<a href="/dashboard/offers/<%= requestId %>" class="btn btn-primary mb-3"><i class="fas fa-angle-right mr-2"></i>قائمة العروض</a>

<div class="card card-success card-outline">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-pencil-alt mr-2"></i>تعديل العرض</h3>
    </div>
    <form action="/dashboard/offers/<%= requestId %>/<%= offer.id %>/update" method="post">
        <div class="card-body">
            <% messages.forEach(message => { %>
            <div class="alert alert-<%= message.variant || 'primary' %>" id="app-alert"><%- message.body %></div>
            <% }) %>

            <div class="row">
                <div class="col-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="form-group">
                        <label>السعر :</label>
                        <input type="text" class="form-control" name="price" value="<%= vv("price", offer.price) %>" />
                    </div>
                </div>
                <div class="col-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="form-group">
                        <label>مدة التنفيذ :</label>
                        <input type="text" class="form-control" name="duration" value="<%= vv("duration", offer.duration) %>">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="form-group">
                        <label>ملاحظات :</label>
                        <textarea class="form-control" name="note" rows="5"><%= vv("note", offer.note) %></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">تعديل العرض</button>
        </div>
    </form>
</div>
