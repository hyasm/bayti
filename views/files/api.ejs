<div class="modal fade" id="files-modal">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content card">
            <div class="card-header d-flex align-items-center">
                <h3 class="card-title"><i class="fas fa-archive mr-2"></i>قائمة الملفات<span class="badge badge-warning ml-2" id="files-selected"></span></h3>
                <div class="card-tools ml-auto">
                    <button class="btn btn-primary btn-sm mr-1" id="files-create"><i class="fas fa-file-alt mr-2"></i>انشاء ملف</button>
                    <button class="btn btn-secondary btn-sm" data-dismiss="modal"><i class="fas fa-times mr-2"></i>اغلاق</button>
                </div>
            </div>
            <div class="card-header rounded-0">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <input type="search" id="datatable-search-text" class="form-control" placeholder="بحث ..." />
                    </div>
                    <div class="px-2">
                        <select class="custom-select" id="datatable-search-columns">
                            <option value="all" selected>الكل</option>
                        </select>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-default" id="datatable-search" style="min-width: 80px"><i class="fa fa-search mr-2"></i>بحث</button>
                    </div>
                </div>
            </div>
            <div class="overlay" id="datatable-overlay">
                <i class="fas fa-3x fa-sync-alt fa-spin"></i>
            </div>
            <div class="modal-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover text-nowrap" id="datatable">
                        <thead>
                            <tr>
                                <th>الملف</th>
                                <th>النوع</th>
                                <th>الوصف</th>
                                <th>أدوات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% files.forEach(file => { %>
                            <tr data-row="<%= file.id %>">
                                <td><%= file.id %></td>
                                <td><%= toMimeType(file.mime_type) %></td>
                                <td><%= file.description %></td>
                                <td>
                                    <a class="btn btn-primary btn-sm" href="/dashboard/files/<%= file.id %>" target="_blank"><i class="fas fa-file-alt mr-2"></i>تفاصيل</a>
                                    <button class="btn btn-success btn-sm files-select" data-id="<%= file.id %>"><i class="fas fa-expand mr-2"></i>تحديد</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="border-top d-none" id="files-upload">
                <div class="alert" id="files-message"></div>
                <form enctype="multipart/form-data" id="files-form">
                    <div class="row m-3">
                        <div class="col-12 col-md-6 col-lg-6 col-6">
                            <div class="form-group">
                                <label>الملف :</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="file" />
                                    <label class="custom-file-label" data-browse="اختر ملف">-</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-6 col-xl-6">
                            <div class="form-group">
                                <label>وصف الملف :</label>
                                <input type="text" class="form-control" name="description" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">انشاء الملف</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div id="datatable-info"></div>
                    </div>
                    <div class="px-2">
                        <select class="custom-select" id="datatable-pages">
                            <option disabled>الصفحة</option>
                        </select>
                    </div>
                    <div>
                        <select class="custom-select" id="datatable-result" style="min-width: 80px">
                            <option disabled>عرض</option>
                            <option value="15">15</option>
                            <option value="30">30</option>
                            <option value="45">45</option>
                            <option value="60">60</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
